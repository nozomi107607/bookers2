<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container">
 <div class="row">
  <div class="col-md-3">
    <%= render 'books/list3' , book: @book %>
    <%= render 'books/list2' , books: @books %>
  </div>
  <div class="col-md-8 offset-md-1">
   <h2>Book Detail</h2>
   <table class="table">
    <tbody>
     <tr>
      <td></td>
      <td><%= link_to @book.title, "/books/#{@book.id}"  %></td>
      <td><%= @book.body %></td>
      <td><%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-success' %></td>
      <td><%= link_to "Destroy", book_path(@book), class: 'btn btn-danger', method: :delete %></td>
     </tr>
    </tbody>
   </table>
  </div>
 </div>

</div>
