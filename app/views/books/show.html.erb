<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<div class="container">
 <div class="row">
  <div class="col-md-3">
    <%= render 'list3', books: @books, user: @book.user %><br>
    <%= render 'list2' , books: @books, user: @book.user %>
  </div>
  <div class="col-md-8 offset-md-1">
   <h2>Book detail</h2>
   <table class="table">
    <tbody>
     <tr>
      <td><%= image_tag @book.user.get_profile_image(40,40) %><br><%= link_to @book.user.name, user_path(@book.user.id) %></td>
      <td><%= link_to @book.title, "/books/#{@book.id}"  %></td>
      <td><%= @book.body %></td>
      <% if @book.user == current_user %>
      <td><%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-success'  %></td>
      <td><%= link_to "Destroy", book_path(@book), class: 'btn btn-danger', method: :delete %></td>
      <% end %>
     </tr>
    </tbody>
   </table>
  </div>
 </div>

</div>
