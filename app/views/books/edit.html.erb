<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        <%= form_with model:@book, url: update_book_path(@book.id), method: :patch do |f| %>
            <div class="form-group">
              <label for="inputTitle">Title</label>
              <input type="title" class="form-control" id="inputTitle">
            </div>
            <div class="form-group">
              <label for="inputOpinion">Opinion</label>
              <textarea class="form-control" id="opinion" ></textarea>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-success">Update Book</button>
            </div>
        <% end %>
        <%= link_to "Show", book_path %> | <%= link_to "Back", books_path %>
    </div>
  </div>
</div>